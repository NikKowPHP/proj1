{
  "steps": [
    {
      "title": "About You",
      "questions": [
        {
          "id": "age",
          "text": "What is your age range?",
          "type": "select",
          "options": ["18-29", "30-39", "40-49", "50-59", "60+"]
        },
        {
          "id": "sex",
          "text": "What was your sex assigned at birth?",
          "type": "select",
          "options": ["Male", "Female"]
        },
        {
          "id": "height",
          "text": "Height",
          "type": "number_input"
        },
        {
          "id": "weight",
          "text": "Weight",
          "type": "number_input"
        }
      ]
    },
    {
      "title": "Lifestyle Habits",
      "questions": [
        {
          "id": "smoking_status",
          "text": "What is your smoking status?",
          "type": "select",
          "options": ["Never smoked", "Former smoker", "Current smoker"]
        },
        {
          "id": "smoking_duration",
          "text": "For how many years have you been smoking?",
          "type": "select",
          "options": ["Less than 5 years", "5-10 years", "11-20 years", "More than 20 years"],
          "dependsOn": {
            "questionId": "smoking_status",
            "value": "Current smoker"
          }
        },
        {
          "id": "smoking_years_quit",
          "text": "How many years has it been since you quit smoking?",
          "type": "select",
          "options": ["Less than 1 year", "1-5 years", "6-10 years", "More than 10 years"],
          "dependsOn": {
            "questionId": "smoking_status",
            "value": "Former smoker"
          }
        },
        {
          "id": "alcohol",
          "text": "On average, how many alcoholic drinks do you have per week?",
          "type": "select",
          "options": ["None", "1-2", "3-7", "8-14", "15+"]
        }
      ]
    },
    {
      "title": "Diet & Exercise",
      "questions": [
        {
          "id": "activity",
          "text": "How many days per week do you get at least 30 minutes of moderate physical activity?",
          "type": "select",
          "options": ["0 days", "1-2 days", "3-4 days", "5+ days"]
        },
        {
          "id": "diet_fruits_veg",
          "text": "How many servings of fruits and vegetables do you eat per day?",
          "type": "select",
          "options": ["0-1", "2-3", "4-5", "6+"]
        },
        {
            "id": "diet_red_meat",
            "text": "How often do you eat red or processed meat per week?",
            "type": "select",
            "options": ["Never or rarely", "1-2 times", "3-4 times", "5+ times"]
        }
      ]
    },
    {
      "title": "Environmental & Occupational History",
      "description": "This information helps assess risks related to your environment and work.",
      "questions": [
        {
          "id": "asbestos_exposure",
          "text": "Have you ever had significant, prolonged exposure to asbestos?",
          "type": "select",
          "options": ["Yes", "No", "I don't know"]
        }
      ]
    },
    {
        "title": "Family History",
        "description": "This information helps provide a more accurate assessment. It will not be stored and remains completely anonymous.",
        "questions": [
            {
                "id": "family_history_cancer",
                "text": "Have any of your first-degree relatives (parent, sibling, child) been diagnosed with cancer?",
                "type": "select",
                "options": ["Yes", "No", "I don't know"]
            }
        ]
    }
  ]
}