                ]
              }
            },
            {
              "id": "personal_cancer_history",
              "title": { "en": "Personal Cancer History", "pl": "Osobista Historia Nowotworów" },
              "options": {
                "cancerTypes": [ { "value": "breast", "label": "Breast Cancer" }, { "value": "lung", "label": "Lung Cancer" } ],
                "treatmentTypes": [ { "id": "surgery", "label": "Surgery"}, { "id": "chemo", "label": "Chemotherapy"}, {"id": "radio", "label": "Radiotherapy"} ]
              }
            },
            {
              "id": "screening_immunization",
              "title": {"en": "Screening & Immunization", "pl": "Badania Przesiewowe i Szczepienia"},
              "screenings": [
                {"id": "colonoscopy", "text": "Colonoscopy", "questions": [
                  {"id": "screen.colonoscopy.done", "text": "Colonoscopy ever?", "type": "select", "options": ["Yes", "No"]},
                  {"id": "screen.colonoscopy.date", "text": "Last colonoscopy year", "type": "year_input", "dependsOn": {"questionId": "screen.colonoscopy.done", "value": "Yes"}}
                ]},
                {"id": "mammogram", "text": "Mammogram", "dependsOn": {"questionId": "sex_at_birth", "value": "Female"}, "questions": [
                  {"id": "screen.mammo.done", "text": "Mammogram ever?", "type": "select", "options": ["Yes", "No"]},
                  {"id": "screen.mammo.date", "text": "Last mammogram year", "type": "year_input", "dependsOn": {"questionId": "screen.mammo.done", "value": "Yes"}}
                ]}
              ],
              "immunizations": [
                {"id": "imm.hpv", "text": "HPV vaccination", "type": "select", "options": ["Yes", "No", "Unsure"]},
                {"id": "imm.hbv", "text": "HBV vaccination", "type": "select", "options": ["Yes", "No", "Unsure"]}
              ]
            },
            {
              "id": "sexual_health",
              "title": {"en": "Sexual Health (Optional)", "pl": "Zdrowie Seksualne (Opcjonalne)"},
              "questions": [
                {"id": "sex.active", "text": "Currently sexually active?", "type": "select", "options": ["Yes", "No", "Prefer not to say"]},
                {"id": "sex.barrier_freq", "text": "Condom/barrier use", "type": "select", "options": ["Always", "Sometimes", "Never", "Prefer not to say"]}
              ]
            },
            {
              "id": "occupational_hazards",
              "title": {"en": "Occupational Hazards (Optional)", "pl": "Zagrożenia Zawodowe (Opcjonalne)"},
              "options": {
                "jobTitles": [{ "value": "welder", "label": "Welder"}, { "value": "miner", "label": "Miner"}],
                "exposures": [{ "value": "asbestos", "label": "Asbestos"}, { "value": "silica", "label": "Silica"}],
                "ppe": [{"value": "respirator", "label": "Respirator"}, {"value": "gloves", "label": "Gloves"}],
                "shiftPatterns": ["Never", "Occasionally", "Frequently"],
                "intensities": ["Low", "Moderate", "High", "Unsure"]
              }
            },
            {
              "id": "environmental_exposures",
              "title": {"en": "Environmental Exposures (Optional)", "pl": "Narażenie Środowiskowe (Opcjonalne)"},
              "questions": [
                {"id": "home.years_here", "text": "Years at current residence", "type": "number_input"},
                {"id": "home.radon_tested", "text": "Home tested for radon?", "type": "select", "options": ["Yes", "No", "Unsure"]}
              ]
            }
          ]
        }
      ]
    }
  ]
